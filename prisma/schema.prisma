datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  CONSUMER
  PHARMACY
  RIDER
  ADMIN
}

enum UserStatus {
  ACTIVE
  PENDING
  BLOCKED
}

enum OrderStatus {
  PENDING
  ACCEPTED
  READY
  PICKED
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum RiderAvailability {
  AVAILABLE
  BUSY
  OFFLINE
}

model User {
  id            String      @id @default(cuid())
  name          String
  email         String      @unique
  phone         String      @unique
  password      String
  role          UserRole    @default(CONSUMER)
  status        UserStatus  @default(PENDING)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  pharmacy      Pharmacy?
  rider         Rider?
  orders        Order[]
  reviews       Review[]
}

model Pharmacy {
  id              String    @id @default(cuid())
  userId          String    @unique
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name            String
  address         String
  latitude        Float
  longitude       Float
  licenseDoc      String?
  cacDoc          String?
  verified        Boolean   @default(false)
  
  openTime        String?
  closeTime       String?
  deliveryRadius  Float     @default(10.0)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  products        Product[]
  orders          Order[]
  reviews         Review[]
}

model Rider {
  id                String              @id @default(cuid())
  userId            String              @unique
  user              User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  transportType     String
  licenseDoc        String?
  bikeDoc           String?
  verified          Boolean             @default(false)
  
  latitude          Float?
  longitude         Float?
  availability      RiderAvailability   @default(OFFLINE)
  
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  orders            Order[]
  earnings          RiderEarning[]
}

model Product {
  id                  String    @id @default(cuid())
  pharmacyId          String
  pharmacy            Pharmacy  @relation(fields: [pharmacyId], references: [id], onDelete: Cascade)
  
  name                String
  description         String?
  category            String
  price               Float
  quantity            Int
  expiryDate          DateTime?
  prescriptionRequired Boolean  @default(false)
  imageUrl            String?
  
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  orderItems          OrderItem[]
  
  @@index([pharmacyId])
  @@index([category])
}

model Order {
  id                String        @id @default(cuid())
  consumerId        String
  consumer          User          @relation(fields: [consumerId], references: [id])
  
  pharmacyId        String
  pharmacy          Pharmacy      @relation(fields: [pharmacyId], references: [id])
  
  riderId           String?
  rider             Rider?        @relation(fields: [riderId], references: [id])
  
  status            OrderStatus   @default(PENDING)
  paymentStatus     PaymentStatus @default(PENDING)
  paymentMethod     String        // 'online' or 'cash'
  
  subtotal          Float
  deliveryFee       Float
  total             Float
  
  deliveryAddress   String
  deliveryLatitude  Float
  deliveryLongitude Float
  
  prescriptionUrl   String?
  notes             String?
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  items             OrderItem[]
  
  @@index([consumerId])
  @@index([pharmacyId])
  @@index([riderId])
  @@index([status])
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  
  quantity    Int
  price       Float
  
  @@index([orderId])
}

model RiderEarning {
  id          String   @id @default(cuid())
  riderId     String
  rider       Rider    @relation(fields: [riderId], references: [id])
  
  amount      Float
  description String
  date        DateTime @default(now())
  
  @@index([riderId])
}

model Review {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  pharmacyId  String
  pharmacy    Pharmacy @relation(fields: [pharmacyId], references: [id])
  
  rating      Int
  comment     String?
  
  createdAt   DateTime @default(now())
  
  @@index([pharmacyId])
}